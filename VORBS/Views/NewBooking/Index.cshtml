@{
    ViewBag.Title = "New Booking";
}
<div ng-app="newBooking">
    <div id="controllerDiv" ng-controller="NewBookingController">

        <link href="~/Content/BootStrapTimePicker/bootstrap-timepicker.css" rel="stylesheet" />
        <link href="~/Content/BootStrapDatePicker/datepicker.css" rel="stylesheet" />
        <link href="~/Content/fullcalendar/fullcalendar.min.css" rel="stylesheet" />

        <h2>New Booking</h2>
        <div class="form-inline">
            <div class="form-group">

                <div class="input-group">
                    <label class="col-sm-2 control-label">Location</label>
                    <select class="form-control" ng-options="location.name for location in locations" ng-model="bookingFilter.location"></select>
                </div>

                <div class="input-group">
                    <label class="col-sm-2 control-label">Date</label>
                    <input id="startDatePicker" class="form-control datepicker" ng-model="bookingFilter.startDate" />
                </div>

                <div class="input-group">
                    <label class="control-label">Time Start</label>
                    <input id="startTimePicker" class="form-control timepicker" ng-model="bookingFilter.startTime" />
                </div>

                <div class="input-group">
                    <label class="control-label">Time End</label>
                    <input id="endTimePicker" class="form-control timepicker" ng-model="bookingFilter.endTime" />
                </div>

                <div class="input-group ">
                    <label class="control-label">Smart room</label>
                    <input type="checkbox" class="form-control" ng-model="bookingFilter.smartRoom" />
                </div>

                <div class="input-group">
                    <label class="control-label">Number of Attendees</label>
                    <input id="attendessControl" type="number" class="form-control" ng-model="bookingFilter.numberOfAttendees" />
                </div>

                <input id="searchButton" type="button" class="form-control" ng-click="SearchBookings()" value="Search" />

            </div>

            <hr />

            <h2 id="bookingTitle">Available Rooms</h2>

            <span id="errorMessage"></span>

            <div class="alert alert-info">Please use the meeting rooms responsibly. Only book rooms that are suitable for your meeting size.</div>
            <div id="bookingTable">
                <!-- Content is rendered here from angular using the search filters -->
            </div>
        </div>

        <!--Confirmation Screen-->
        <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">New Booking for {{ bookingFilter.startDate }}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form">
                            @*<h6 class="modal-title">Please Enter in the Below Details:</h6>*@
                            <div class="form-inline">
                                <div class="form-group">
                                    <label class="control-label">Room Name</label>
                                    <input class="form-control" readonly="readonly" ng-model="newBooking.roomName">
                                </div>
                                <div class="form-group" style="padding-left:40px;">
                                    <label class="control-label">Date</label>
                                    <input class="form-control" readonly="readonly" ng-model="bookingFilter.startDate">
                                </div>
                            </div>
                            <br />
                            <div class="form-inline">
                                <div class="form-group">
                                    <label class="control-label">Start Time</label>
                                    <span style="padding-left:12px;">
                                        <input class="form-control" readonly="readonly" ng-model="bookingFilter.startTime">
                                    </span>
                                </div>
                                <div class="form-group" style="padding-left:10px;">
                                    <label class="control-label">End Time</label>
                                    <input class="form-control" readonly="readonly" ng-model="bookingFilter.endTime">
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <h3 class="modal-title">Attendees</h3>
                                <div class="form-group">
                                    <label style="font-weight: normal !important;">Internal (VOA)</label>
                                    <input class="form-control" ng-enter="alert('Open AD Dialog')">
                                </div>
                                <div class="form-group">
                                    <label style="font-weight: normal !important;">External</label>
                                    <div class="form-inline">
                                        <input class="form-control" ng-model="newBooking.externalAttendes">
                                        <input type="button" value="Add" />
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group">
                                    <div class="input-group ">
                                        <label class="control-label">Additional Equipment</label><br />
                                        <input type="checkbox" value="PC" ng-model="newBooking.pc" /> PC<br />
                                        <input type="checkbox" value="FlipChart" ng-model="newBooking.flipChart" /> Flipchart<br />
                                        <input type="checkbox" value="Projector" ng-model="newBooking.projector" /> Projector
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" ng-click="NewBooking()">Confirm Booking</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/moment.js"></script>

    <script src="~/Scripts/FullCalandar/fullcalendar.min.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.min.js"></script>

    <script src="~/Scripts/NewBooking/moduleManager.js"></script>
    <script src="~/Scripts/NewBooking/newBookingController.js"></script>

    <script src="~/Scripts/BootStrapTimePicker/bootstrap-timepicker.min.js"></script>
    <script src="~/Scripts/BootStrapDatePicker/bootstrap-datepicker.js"></script>

    <script>
        $(function () {
            $('.datepicker').datepicker({
                format: 'dd-mm-yyyy',
                autoClose: true,
                todayBtn: true,
                todayHighlight: true,
                weekStart: 1
            })

            $('.timepicker').timepicker({
                showInputs: false,
                minuteStep: 30
            });
        });
    </script>
}