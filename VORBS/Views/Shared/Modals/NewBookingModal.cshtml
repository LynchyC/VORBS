<!-- New Booking Confirmation Screen-->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">New Booking for {{ bookingFilter.startDate }}</h4>
            </div>
            <div class="modal-body">
                <div class="form">
                    <div class="alert alert-danger" id="bookingModalErrorMessage" style="display: none;"></div>
                    <div class="form-inline">
                        <div class="form-group">
                            <label class="control-label">Room Name</label>
                            <input class="form-control" readonly="readonly" ng-model="newBooking.Room.RoomName">
                        </div>
                        <div class="form-group" style="padding-left:15px;">
                            <label class="control-label">Location</label>
                            <input class="form-control" readonly="readonly" ng-model="bookingFilter.location.name">
                        </div>
                    </div>
                    <br />
                    <div class="form-inline">
                        <div class="form-group">
                            <label class="control-label">Start Time</label>
                            <span style="padding-left:12px;">
                                <input id="bookingModalStartTime" class="form-control timepicker" ng-model="booking.StartTime" />
                            </span>
                        </div>
                        <div class="form-group" style="padding-left:10px;">
                            <label class="control-label">End Time</label>
                            <input id="bookingModalEndTime" class="form-control timepicker" ng-model="booking.EndTime" />
                        </div>
                    </div>
                    <br />
                    <div class="form-inline">
                        <div class="form-group">
                            <label class="control-label">Subject</label>
                            <span style="padding-left:30px;">
                                <input maxlength="140" class="form-control" ng-model="newBooking.Subject">
                            </span>
                        </div>
                        <span style="padding-left:120px;">
                            <button type="button" class="btn btn-primary" disabled="disabled">Recurring Meeting</button>
                        </span>
                    </div>
                    <hr />

                    @if (VorbsAuthorise.IsUserAuthorised(User.Identity.Name, 1))
                    {
                        <div class="form-group">
                            <div class="input-group">
                                <label class="control-label">On Behalf Of</label>
                                <input id="onBehlafOfTextBox" class="form-control" data-toggle="modal" data-target="#activeDirecotryModal" ng-model="newBooking.Owner" />
                            </div>
                        </div>
                        <hr />
                    }

                    <div class="form-group">
                        <label class="control-label">External Attendees</label>
                        <div class="form-group">
                            <div class="form-inline">
                                <label style="font-weight: normal !important;">First Name</label>
                                <input class="form-control" id="externalFirstNameTextBox" />
                                <label style="font-weight: normal !important;">Last Name</label>
                                <input class="form-control" id="externalLastNameTextBox" />
                                <button type="button" class="btn btn-primary" ng-click="AddExternalAttendee()">Add</button>
                            </div>
                            <table>
                                <tr ng-repeat="externalName in booking.ExternalNames">
                                    <td>{{ externalName }}</td>
                                    <td><span class="btn glyphicon glyphicon-remove" ng-click="RemoveExternalAttendee(externalName)"></span></td>
                                </tr>
                            </table>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="input-group ">
                                <label class="control-label">Additional Equipment</label><br />
                                <input type="checkbox" value="FlipChart" ng-model="newBooking.FlipChart" /> Flipchart<br />
                                <input type="checkbox" value="Projector" ng-model="newBooking.Projector" /> Projector
                            </div>
                        </div>
                        <div class="form-group" id="dssAssistChoice">
                            <div class="input-group ">                                
                                <input type="checkbox" value="DSSAssist" ng-model="newBooking.DSSAssist" /> Request DSS Assistance<br />                                
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="newBookingConfirmButton" ng-click="NewBooking()">Confirm Booking</button>
                </div>
            </div>
        </div>
    </div>
</div>